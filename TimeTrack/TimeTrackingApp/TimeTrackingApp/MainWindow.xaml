<Window x:Name="WindowScreen" x:Class="TimeTrackingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTrackingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800"
        Closing="Window_Closing" KeyUp="WindowScreen_KeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="307*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="310*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="TableGrid" HorizontalAlignment="Stretch" Height="auto" Width="auto" Margin="10,10,14,10" VerticalAlignment="Stretch" SelectionChanged="TableGrid_SelectionChanged" Grid.RowSpan="3" MouseDown="TableGrid_MouseDown" FontSize="14" FontFamily="Open Sans"/>
        <Button x:Name="NewEntry" Content="[N] New" HorizontalAlignment="Stretch" Margin="10,9.4,15.6,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Grid.Row="1" FontSize="16" FontFamily="Open Sans Semibold" Click="NewEntry_Click" Foreground="#FF02004B" BorderBrush="#FFFF6D0E"/>
        <Button x:Name="ToggleTimer" Content="[S] Start/Stop" HorizontalAlignment="Stretch" Margin="10,10.2,15.6,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Grid.Row="2" FontSize="16" FontFamily="Open Sans Semibold" Click="ToggleTimer_Click" Foreground="#FF02004B" BorderBrush="#FFFF6D0E"/>
    </Grid>
</Window>
