<Window x:Class="TimeTrackingApp.EditTime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTrackingApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        KeyUp="WindowScreen_KeyUp"
        Title="Edit Time" Height="178.259" Width="228.911">
    <Grid>
        <Label Content="Enter new time (in hours)" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Height="34" Width="202"/>
        <TextBox x:Name="NewHours" HorizontalAlignment="Left" Height="26" Margin="29,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>
        <Button x:Name="SubmitHours" Content="Submit (Enter)" HorizontalAlignment="Left" Margin="29,102,0,0" VerticalAlignment="Top" Width="165" Click="SubmitDelta_Click"/>

    </Grid>
</Window>
