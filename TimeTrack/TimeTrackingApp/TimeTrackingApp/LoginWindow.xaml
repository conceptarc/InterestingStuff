<Window x:Class="TimeTrackingApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTrackingApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="310" Width="380" ResizeMode="NoResize">
    <Grid>
        <Label Content="JIRA Username: " HorizontalAlignment="Left" Margin="37,92,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="JIRA Password: " HorizontalAlignment="Left" Margin="37,143,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="UsernameTxt" HorizontalAlignment="Left" Margin="171,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" FontSize="16"/>
        <PasswordBox x:Name="PasswordTxt" HorizontalAlignment="Left" Margin="171,147,0,0" VerticalAlignment="Top" Width="150" FontSize="16" KeyDown="PasswordTxt_KeyDown"/>
        <Label Content="Tempo Login" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#FF343434"/>
        <Button x:Name="LoginBtn" Content="Login (Enter key)" HorizontalAlignment="Center" Margin="0,212,0,0" VerticalAlignment="Top" FontSize="16" Width="144" Height="34" Click="LoginBtn_Click"/>

    </Grid>
</Window>
